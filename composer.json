{
  "name": "bacula-web/bacula-web",
  "type": "project",
  "description": "The open source web based reporting and monitoring tool for Bacula",
  "minimum-stability": "stable",
  "prefer-stable": true,
  "keywords": [
    "php",
    "reporting",
    "monitoring",
    "bacula"
  ],
  "homepage": "https://www.bacula-web.org",
  "license": "GPL-2.0-only",
  "authors": [
    {
      "name": "Davide Franco",
      "email": "bacula-dev@dflc.ch",
      "homepage": "https://www.bacula-web.org",
      "role": "Developer"
    }
  ],
  "support": {
    "email": "hello@bacula-web.org",
    "issues": "https://github.com/bacula-web/bacula-web/issues",
    "forum": "https://github.com/bacula-web/bacula-web/discussions"
  },
  "funding": [
    {
      "type": "buymeacoffee",
      "url": "https://www.buymeacoffee.com/baculaweb"
    }
  ],
  "config": {
    "component-dir": "vendor/components",
    "allow-plugins": {
      "composer/installers": true,
      "robloach/component-installer": true,
      "oomphinc/composer-installers-extender": true,
      "symfony/runtime": true,
      "symfony/flex": true
    },
    "optimize-autoloader": true,
    "preferred-install": {
      "*": "dist"
    }
  },
  "require": {
    "php": ">=7.4",
    "ext-gettext": "*",
    "ext-mbstring": "*",
    "ext-openssl": "*",
    "ext-pdo": "*",
    "ext-sqlite3": "*",
    "ext-posix": "*",
    "novus/nvd3": "@stable",
    "components/font-awesome": "6.*",
    "pear/date_humandiff": "^0.5.0",
    "symfony/translation": "^5.4",
    "nesbot/carbon": "^2"
    "symfony/twig-bridge": "^5.4",
    "symfony/console": "^5.4",
    "symfony/framework-bundle": "^5.4",
    "symfony/runtime": "^5.4",
    "symfony/config": "^5.4",
    "symfony/yaml": "^5.4",
    "symfony/http-foundation": "^5.4",
    "symfony/flex": "^1.21",
    "symfony/twig-bundle": "^5.4",
    "twig/extra-bundle": "^2.12|^3.0",
    "twig/twig": "^2.12|^3.0",
    "doctrine/annotations": "^1.14",
    "symfony/dotenv": "^5.4",
    "symfony/webpack-encore-bundle": "^1.17"
  },
  "require-dev": {
    "phpmd/phpmd": "@stable",
    "squizlabs/php_codesniffer": "@stable",
    "phpunit/phpunit": "9.5.26",
    "phpstan/phpstan": "^1.10",
    "symfony/var-dumper": "^5.4"
    "symfony/apache-pack": "^1.0",
    "symfony/maker-bundle": "^1.43",
    "symfony/debug-bundle": "^5.4",
    "symfony/stopwatch": "^5.4",
    "symfony/web-profiler-bundle": "^5.4"
  },
  "autoload": {
    "psr-4": {
      "Core\\": "core/",
      "App\\": "application/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "archive": {
    "exclude": [
      ".gitignore",
      ".phpcs.xml",
      "sonar-project.properties",
      ".github",
      ".tx",
      ".travis.yml",
      "phpunit.xml",
      "/tests",
      ".release-please-manifest.json",
      "release-please-config.json",
      "cog.toml"
    ]
  },
  "scripts": {
    "auto-scripts": {
      "cache:clear": "symfony-cmd",
      "assets:install %PUBLIC_DIR%": "symfony-cmd"
    },
    "post-install-cmd": [
      "@auto-scripts"
    ],
    "post-update-cmd": [
      "@auto-scripts"
    ]
  }
}
